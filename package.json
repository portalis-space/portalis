{
  "name": "portalis",
  "version": "0.0.1",
  "description": "",
  "author": "azmy.ansori@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare:husky": "husky install",
    "prepare:code": "pnpm run format && pnpm run lint",
    "build:docker:dev": "docker build -t azmynusa/portalis:latest --platform linux/amd64 .",
    "push:docker:dev": "docker push azmynusa/portalis:latest",
    "docker:clear": "docker system prune -a -f",
    "docker:dev": "pnpm run build:docker:dev && pnpm run push:docker:dev && pnpm run docker:clear",
    "build:docker:prod": "docker build . -t azmynusa/prod-entrypass-event:latest --platform linux/amd64 && docker build -f migrator.Dockerfile -t azmynusa/prod-entrypass-event-migrator:latest --platform linux/amd64 .",
    "push:docker:prod": "docker push azmynusa/prod-entrypass-event:latest && docker push azmynusa/prod-entrypass-event-migrator:latest",
    "docker:prod": "pnpm run build:docker:prod && pnpm run push:docker:prod && pnpm run docker:clear"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "@pinata/sdk": "^2.1.0",
    "@telegram-apps/init-data-node": "^1.1.1",
    "adm-zip": "^0.5.16",
    "argon2": "^0.41.1",
    "axios": "^1.7.7",
    "bull": "^4.16.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "country-code-lookup": "^0.1.3",
    "csv-parse": "^5.5.6",
    "dataloader": "^2.2.2",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "ethers": "^6.13.2",
    "generate-password": "^1.7.1",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "json-api-serializer": "^2.6.6",
    "mongoose": "^8.6.2",
    "nest-csv-parser": "^2.0.4",
    "nftscan-api": "^1.13.1",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.13",
    "@types/json-api-serializer": "^2.6.6",
    "@types/multer": "^1.4.12",
    "@types/node": "22.5.5",
    "@types/nodemailer": "^6.4.15",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
